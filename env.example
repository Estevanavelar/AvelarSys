# ========================================
# AVELAR SYSTEM - Environment Variables
# ========================================
# Arquivo de exemplo para variáveis de ambiente
# Copie para .env e configure com seus valores

# ========================================
# SUPABASE DATABASES
# ========================================

# AvAdmin Database (Autenticação Centralizada - Neon)
NEON_DATABASE_URL=postgresql+asyncpg://neondb_owner:NEON_PASSWORD@NEON_HOST/neondb?ssl=true
AVADMIN_DATABASE_URL=${NEON_DATABASE_URL}

# StockTech Database (Marketplace B2B)
STOCKTECH_DATABASE_URL=postgresql://postgres:PASSWORD@localhost:5436/avelar_stocktech

# ========================================
# SUPABASE STORAGE (CLIENTES VITE)
# ========================================
VITE_SUPABASE_URL=https://banco.avelarcompany.dev.br
VITE_SUPABASE_PUBLIC_URL=https://banco.avelarcompany.dev.br
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
VITE_SUPABASE_STORAGE_BUCKET=public

# ========================================
# JWT CONFIGURATION (Compartilhado)
# ========================================

# Chave secreta para assinatura JWT (mínimo 256 bits)
JWT_SECRET=avelar-system-super-secure-secret-key-256-bits-minimum-production

# Algoritmo JWT
JWT_ALGORITHM=HS256

# Dias de expiração do token
JWT_EXPIRE_DAYS=7

# ========================================
# AVADMIN BACKEND (Python + FastAPI)
# ========================================

# Porta do servidor AvAdmin
AVADMIN_PORT=8001

# Ambiente (development/production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Bcrypt rounds para hash de senha
BCRYPT_ROUNDS=12

# ========================================
# WHATSAPP CONFIGURATION
# ========================================

# WhatsApp Business API Token
WHATSAPP_API_TOKEN=your_whatsapp_business_api_token

# WhatsApp Business Account ID
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# WhatsApp Phone Number ID
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# WhatsApp default number (+5511999999999)
WHATSAPP_DEFAULT_NUMBER=+5511999999999

# Máximo de tentativas WhatsApp
WHATSAPP_MAX_RETRIES=3

# Timeout WhatsApp (segundos)
WHATSAPP_TIMEOUT=30

# ========================================
# STOCKTECH BACKEND (Node.js + tRPC)
# ========================================

# Porta do servidor StockTech
STOCKTECH_PORT=5000

# Ambiente StockTech
NODE_ENV=development

# ========================================
# PAGAMENTOS (MercadoPago)
# ========================================

# MercadoPago Access Token
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token

# MercadoPago Public Key
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key

# MercadoPago Webhook Secret
MERCADOPAGO_WEBHOOK_SECRET=your_webhook_secret

# ========================================
# STORAGE (AWS S3)
# ========================================

# AWS S3 Bucket
AWS_S3_BUCKET=avelar-system-storage

# AWS Region
AWS_REGION=us-east-1

# AWS Access Key
AWS_ACCESS_KEY_ID=your_aws_access_key

# AWS Secret Key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ========================================
# URLS DE PRODUÇÃO
# ========================================

# URL base do AvAdmin API
AVADMIN_API_URL=https://api-admin.avelarcompany.com.br

# URL base do StockTech API
STOCKTECH_API_URL=https://api-stocktech.avelarcompany.com.br

# URL do frontend
FRONTEND_URL=https://app.avelarcompany.com.br

# ========================================
# RATE LIMITING
# ========================================

# Requisições por minuto por IP
RATE_LIMIT_PER_MINUTE=1000

# Burst de requisições
RATE_LIMIT_BURST=100

# ========================================
# LOGGING
# ========================================

# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=DEBUG

# ========================================
# REDIS (Cache e Sessões)
# ========================================

# Redis URL
REDIS_URL=redis://localhost:6379

# Redis Password (se necessário)
REDIS_PASSWORD=

# ========================================
# CORS SETTINGS
# ========================================

# URLs permitidas para CORS (separadas por vírgula)
CORS_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:3000,https://app.avelarcompany.com.br

# ========================================
# TRIAL PERIOD
# ========================================

# Dias de período de teste gratuito
TRIAL_PERIOD_DAYS=30

# ========================================
# EMAIL/SMTP (Futuro)
# ========================================

# SMTP Server
SMTP_SERVER=smtp.gmail.com

# SMTP Port
SMTP_PORT=587

# SMTP Username
SMTP_USERNAME=your_email@gmail.com

# SMTP Password
SMTP_PASSWORD=your_app_password

# ========================================
# MONITORAMENTO (Futuro)
# ========================================

# Sentry DSN
SENTRY_DSN=your_sentry_dsn

# Google Analytics
GA_TRACKING_ID=your_ga_tracking_id